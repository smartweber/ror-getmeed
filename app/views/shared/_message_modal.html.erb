<div class="modal fade" id="messageRecruiterModal" tabindex="-1" role="dialog" aria-labelledby="ownerBoxLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <div class="any-center">
          <legend class="modal-title" id="ownerLabel">
            Follow up with <span type="company-name"></span>'s hiring manager.
          </legend>
        </div>
      </div>
      <%= form_tag({:controller => 'jobs', :action => :contact_recruiter}, :class => 'form-view-tight',
                   :html => {:multipart => true}, :remote => true) do %>
          <div class="modal-body" style="margin-top: 0px; padding-top: 0px">
            <div class="form-view-tight" style="margin-top: 0px">
              <p>
                <span class="info-text-large">To: </span>
                <span type="company-name">Microsoft</span>
              </p>
              <%= hidden_field_tag :id, params[:id], :id => 'form_message_id_hidden_id' %>
              <%= hidden_field_tag :insightToken, params[:insightToken], :id => 'form_message_id_hidden_insightToken' %>
              <div class="form-group">
                <label style="color: #333333;font-size: 15px;">
                  <%= text_field_tag :subject, nil, :class => 'form-control', :required => '',
                                     :placeholder => 'Message Subject (*Required)', :style => "width:100%" %>
                </label>
              </div>
              <div class="form-group">

                <label style="color: #333333;font-size: 15px;">
                  <%= text_area_tag :description, nil, :class => 'form-control', :required => '',
                                    :placeholder => 'Message Body (*Required)', :cols => 80, :rows => 40, :style => "width: 100%" %>
                </label>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <div class="any-center">
              <%= button_tag(type: 'submit', class: 'btn btn-primary btn-primary', :data => {:disable_with => 'Sending'}) do %>
                  <span class="glyphicon glyphicon-send"></span> Send Message
              <% end %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>