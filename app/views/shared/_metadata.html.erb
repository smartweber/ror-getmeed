<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
<meta name="robots" content="index,follow"/>
<meta name="author" content="Meed"/>
<meta name="viewport" content="user-scalable=no,width=device-width">
<meta name="fb:app_id" content="219288138250944"/>
<% if @metadata.blank? %>
    <% if request.url.split('school=')[1].blank? %>
        <meta name="og:title" content="The Professional Community for students"/>
        <meta property="og:image" content="https://res.cloudinary.com/resume/image/upload/v1443227274/Slice_1_yvaut1.png"/>
    <% else %>
        <meta name="og:title" content="The Professional Community for students"/>
        <meta property="og:image" content="<%= get_school_logo_url(request.url.split('school=')[1]) %>"/>
    <% end %>
    <meta property="description" content="Meed is a Professional Community for students where they showcase their Professionalinterests"/>
    <meta property="og:description" content="Meed is a Professional Community for students where they showcase Professionalinterests"/>
    <meta property="og:url" content="<%= request.url %>"/>

<% else %>
    <% unless @metadata[:title].blank? %>
        <meta name="description" content="<%= @metadata[:title] %>"/>
        <meta property="og:title" content="<%= @metadata[:title] %>"/>
        <meta name="author" content=<%= @metadata[:title] %>/>
    <% end %>

    <% if @metadata[:description].blank? %>
        <meta property="og:description" content="Meed is a Professional Community for students where they showcase Professionalinterests"/>
    <% else %>
        <meta property="og:description" content="<%=Sanitize.clean(@metadata[:description].truncate(450, :omission => '..')) %>"/>
    <% end %>
    <meta property="og:url" content="<%= @metadata[:url].blank? ? request.url : @metadata[:url] %>"/>
    <% if  @metadata[:image_url].blank? %>
        <meta property="og:image" content="https://res.cloudinary.com/resume/image/upload/v1443227274/Slice_1_yvaut1.png"/>
    <% else %>
        <meta property="og:image" content="<%= @metadata[:image_url] %>"/>
    <% end %>
    <% unless @metadata[:video_url].blank? %>
        <meta property="og:video" content="<%= @metadata[:video_url] %>"/>
    <% end %>
<% end %>
<meta property="og:site_name" content="Meed"/>
<meta property="og:type" content="website"/>
