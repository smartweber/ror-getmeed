<div class="modal fade" id="forwardJobModal" tabindex="-1" role="dialog" aria-labelledby="ownerBoxLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <legend>
          <div class="any-center">
            Forward this job to a friend!
          </div>
        </legend>
      </div>
      <%= form_tag({:controller => 'jobs', :action => :forward}, :class => 'form-view-tight',
                   :html => {:multipart => true}, :remote => true) do %>
          <div class="modal-body" style="margin-top: 0px; padding-top: 0px">
            <div class="input-group">
              <span class="input-group-addon">@</span>
              <input type="email" class="form-control" required placeholder="Friend's Email">
            </div>
            <%= hidden_field_tag :id, params[:id], :id => 'form_message_id_hidden_id' %>
          </div>

          <div class="any-center">
            <%= button_tag(type: 'submit', class: 'btn btn-primary btn-primary', :data => {:disable_with => "Sending"}) do %>
                <span class="glyphicon glyphicon-send"></span>
                <span name="send-text">Send</span>
            <% end %>
          </div>
      <% end %>
      <div class="modal-footer">
        <div id="share_forward_modal" >
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    $("#share_forward_modal").jsSocials({
        url: 'https://getmeed.com/',
        text: 'Welcome to Meed',
        showCount: "inside",
        showLabel: false,
        shares: ["facebook", "twitter",  "linkedin", "email"]
    });
</script>