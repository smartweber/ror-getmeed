<%= form_tag({:action => :create_lost_user, :token => params[:token]}, :class => 'login-form', :html => {:multipart => true}) do %>
    <div class="form-group">
      <%= text_field_tag :id, nil, :class => 'form-control', :type => 'email', :required => '', :value => params[:primary_email], :placeholder => 'Primary Email (*)' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :first_name, nil, :class => 'form-control', :required => '', :value => params[:first_name], :placeholder => 'First Name (*)' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :last_name, nil, :class => 'form-control', :required => '', :value => params[:last_name], :placeholder => 'Last Name (*)' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :image_url, nil, :class => 'form-control', :placeholder => 'Image URL' %>
    </div>
    <div class="form-group">
      <%= select_tag :degree, options_for_select(@degrees.map { |d| [d, d] }), :style => 'width: 100%; height: 30px', :class => 'enteprise-selectize', :prompt => 'Degree (*) Ex: Master of Science' %>
    </div>
    <div class="form-group">
      <%= select_tag :major, options_for_select(@majors.map { |u| [u.major, u.id] }), :style => 'width: 100%; height: 30px', :class => 'enteprise-selectize', :prompt => 'Select Major (*)' %>
    </div>
    <div class="form-group">
      <%= select_tag :minor, options_for_select(@majors.map { |u| [u.major, u.id] }), :style => 'width: 100%; height: 30px', :class => 'enteprise-selectize', :prompt => 'Select Minor' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :year, nil, :class => 'form-control', :required => '', :pattern => '^\d{4}$', :value => params[:year], :placeholder => 'Graduation Year (*) Ex - 2015' %>
    </div>
    <div class="form-group">
      <label style="color: #333333;font-size: 15px;"><span>getmeed.com/</span><%= text_field_tag :handle, nil, :placeholder => 'username', :class => 'form-control', :required => '', :style => 'font-weight:bold;height:20px' %>
      </label>
    </div>

    <div class="any-center">
      <%= button_tag(type: 'submit', class: 'btn btn-primary btn-primary',  :data => { :disable_with => 'Please wait..'} ) do %>
          Submit
      <% end %>
    </div>

<% end -%>
