<%= form_tag({:action => 'save_education'}, :id => 'form_education_new', :remote => true) do %>
    <div class="form-inline">
      <div class="form-group">
        <%= text_field_tag :education_name, nil, :placeholder => 'ex: Stanford University (Enter School Name)', :class => 'form-control input-medium', :required => '' %>
        <%= hidden_field_tag :hidden_id, '', :id => 'form_new_hidden_id' %>
      </div>
      <div class="form-group" style="float: right;">
        <%= select_year(Date.today, {:field_name => 'start_year', :start_year => 1900, :end_year => 2020}, {:class => 'form-control input-mini'}) %>
        â€”
        <%= select_year(Date.today, {:field_name => 'end_year', :start_year => 1900, :end_year => 2020}, {:class => 'form-control input-mini'}) %>
      </div>
      <div class="form-group">
        <%= text_field_tag :education_degree, nil, :placeholder => 'Degree', :class => 'form-control input-small', :required => '' %>
        <%= text_field_tag :education_majors, nil, :placeholder => 'Majors', :class => 'form-control input-small', :required => '', :style => 'float:right' %>
      </div>
    </div>
    <p>
    </p>
    <div class="form-group">
      <%= button_tag(type: 'submit', :id => 'delete_education_new', class: 'btn btn-sm btn-danger',
                     :style => 'display:none', :confirm => 'Are you sure to delete this education?', :name => 'delete',
                     data: {disable_with: 'Deleting.. '}) do %>
          <span class="glyphicon glyphicon-trash "></span> Delete
      <% end %>
      <%= button_tag(type: 'submit', :id => 'save_education_new', class: 'btn btn-sm btn-primary',
                     data: {disable_with: 'Saving.. '}) do %>
          <span class="glyphicon glyphicon-floppy-disk "></span> Save
      <% end %>
    </div>
<% end -%>