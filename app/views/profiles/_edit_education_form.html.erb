<%= form_tag({:action => 'save_education'}, :id => 'form_' + encode_id(education[:_id]), :remote => true) do %>
    <div class="form-inline">
      <div class="form-group">
        <%= hidden_field_tag :hidden_id, encode_id(education[:_id]), :id => 'education_hidden' %>
        <% if education.name.blank? %>
            <%= text_field_tag :education_name, nil, :placeholder => 'ex: Stanford University (Enter School Name)', :class => 'form-control input-medium', :required => '' %>
        <% else %>
            <%= text_field_tag :education_name, nil, :value => education.name, :placeholder => 'ex: Stanford University', :class => 'form-control input-medium', :required => '' %>
        <% end %>
      </div>
      <div class="form-group" style="float: right;">
        <%= select_year(get_date(education[:start_year], 'January'), {:field_name => 'start_year', :start_year => 1900, :end_year => 2020}, {:class => 'form-control input-mini'}) %>
        â€”
        <%= select_year(get_date(education[:end_year], 'January'), {:field_name => 'end_year', :start_year => 1900, :end_year => 2020}, {:class => 'form-control input-mini'}) %>
      </div>
      <div class="form-group">

        <% if education.degree.blank? %>
          <%= text_field_tag :education_degree, nil, :placeholder => 'Degree -  ex: Master of Science (Degree)', :class => 'form-control input-small', :required => '' %>
        <% else %>
          <%= text_field_tag :education_degree, nil, :value => education.degree, :placeholder => 'Degree -  ex: Master of Science (Degree)', :class => 'form-control input-small', :required => '' %>
        <% end %>
        <% if education.major.blank? %>
          <%= text_field_tag :education_majors, nil, :placeholder => 'ex: Computer Science (Majors)', :class => 'form-control input-small', :required => '' %>
        <% else %>
          <%= text_field_tag :education_majors, nil, :value => education.major, :placeholder => 'ex: Computer Science (Majors)', :class => 'form-control input-small', :required => '' %>
        <% end %>
      </div>
    </div>
    <p>
    </p>
    <div class="form-group">
      <%= button_tag(type: 'submit', :id => 'save_education_'+ encode_id(education[:_id]), class: 'btn btn-sm btn-primary',
                     :data => { disable_with: 'Saving...'}) do %>
          <span class="glyphicon glyphicon-floppy-disk "></span> Save
      <% end %>
      <%= button_tag(type: 'submit', :id => 'delete_education_'+ encode_id(education[:_id]), class: 'btn btn-sm btn-danger',
                     :confirm => 'Are you sure to delete this course?', :name => 'delete',
                     :data => { disable_with: 'Deleting...'}) do %>
          <span class="glyphicon glyphicon-trash "></span> Delete
      <% end %>
    </div>
<% end %>

