<p class="accordion lightbox-text">
</p>
<hr class="hr-header">
    <p class="accordion light-box-div">
      <%= hidden_field_tag :id, @message[:_id], :id => 'blog_hidden' %>
      <% if !@message[:company_logo].blank? %>
          <img src="<%= @message[:company_logo] %>">
      <% else %>
          <img src="<%= asset_path 'illustrations/book.png' %>">
      <% end %>
    </p>
    <hr class="hr-header">
	<div class="row">
      <div class="view-message-div">
	    <%= render 'view_message', :message => @message %>
	  </div>
	  <div class="edit-message-div" style="display: none">
		<%= render 'edit_message', :message => @message %>
	  </div>
    </div>
