<section class="promo section section-on-bg" data-sr='enter bottom and scale up 20% over 1s and reset'>
  <div class="container text-center">
    <% if params[:referrer].eql? 'lb' %>
        <p style="font-size: 18px;line-height: 28px;">
          <% if @referrer_user.blank? %>
              <%= @referrer_user.name %> invited you to participate in
              Meederboard to win Bose Headphones, Spotify Premium, or a Chipotle Giftcard
          <% else %>
              Participate in Meederboard to win Bose Headphones, Spotify Premium, or a Chipotle Giftcard
          <% end %>
          <br>
          by placing in the top 3.
        </p>

        <div class="any-center">
          <img src="https://res.cloudinary.com/resume/image/upload/v1442119463/Untitled-1_v0dzhz.png">
        </div>
    <% else %>
        <div class="any-center">
          <img src="https://res.cloudinary.com/resume/image/upload/c_scale,w_120/v1427155934/crescent_green_rt6rit.png" style="padding: 20px;">
        </div>

    <% end %>

    <%= form_tag({:controller => 'users', :action => 'verify'}, :class => 'signup-form navbar-form', :html => {:multipart => true}) do %>
        <%= hidden_field_tag :inviter_id, @inviter_handle %>
        <div class="form-group">
          <%= text_field_tag :email, nil, :class => 'form-control', :required => '', :style => 'height:50px;', :id => 'sign_up_tb', :placeholder => 'Enter college email (ex: sam@usc.edu)' %>
        </div>
        <%= button_tag(type: 'submit', class: 'btn btn-cta btn-cta-primary', :id => 'splash_input_button', :style => 'text-transform: uppercase; letter-spacing: 1px;', :disable_with => 'Verifying.. ') do %>
            SIGN UP
        <% end %>
        <p style="font-size: 18px;padding-top: 2rem;">
          A COMMUNITY WHERE STUDENTS BUILD CAREERS
        </p>
        <div class="col-md-2 col-md-offset-4">
          <% unless alert.blank? %>
              <p class="label label-important">
                <%= alert %>
              </p>
          <% end %>
        </div>
    <% end -%>
  </div>
</section>

