    <!-- ******Login Section****** -->
    <div class="headline-bg">
    </div>
    <section class="login-section access-section section">
      <div class="container">
        <div class="row">
          <div class="form-box col-md-8 col-sm-12 col-xs-12 col-md-offset-2 col-sm-offset-0 xs-offset-0">
            <div class="form-box-inner">
              <h2 class="title text-center">Sign In</h2>
              <div class="row any-center">
                <div class="form-container col-md-8 col-md-offset-2">
                  <%= form_tag({:controller => :sessions, :action => :create}, :class => 'login-form', :html => {:multipart => true}) do %>
                      <div class="form-group">
                        <%= text_field_tag :username, nil, :placeholder => 'Email or handle', :class => 'form-control',:required => '' %>
                      </div>
                      <div class="form-group">
                        <%= password_field_tag :password, nil, :class => 'form-control', :placeholder => '********',:required => '' %>
                      </div>
                      <% if !alert.blank? %> 
                          <p class="label label-important"> 
                            <%= alert %> 
                          </p> 
                      <% end %> 
                      <p class="accordion info-text-center"> 
                        <%= button_tag(type: 'submit', class: 'btn btn-md btn-success', :data => { :disable_with => 'Signing in..' }) do %>
                            <span class="glyphicon glyphicon-log-in "></span> Sign In 
                        <% end %>
                        <p class="lead"><%= link_to 'Forgot  Password?', :controller => 'users', :action => 'forgot' %></p>
                        <input id="redirect_url" name="redirect_url" type="hidden" value="<%= @redirect_url %>"> 
                  <% end -%>
                </div>
                <!--//form-container-->
                <!--//social-btns-->
              </div>
              <!--//row-->
            </div>
            <!--//form-box-inner-->
          </div>
          <!--//form-box-->
        </div>
        <!--//row-->
      </div>
      <!--//container-->
    </section>
    <section id="cta-section" class="section cta-section text-center pricing-cta-section">
      <div class="container">
        <h2 class="title">Join your university <span class="counting">peers</span> now!</h2>
        <p class="intro">Get started by signing up!</p>
        <p><a class="btn btn-cta btn-cta-primary" href="/" >Sign up!</a></p>
      </div><!--//container-->
    </section>
    <!--//contact-section-->
    <script>
      $(document).ready(function() {
        $('.login-form').formValidation({
          framework: 'bootstrap',
          icon: {
            valid: 'glyphicon glyphicon-ok',
            invalid: 'glyphicon glyphicon-remove',
            validating: 'glyphicon glyphicon-refresh'
          },
          fields: {
            username: {
              validators: {
                notEmpty: {
                  message: 'Username is required'
                },
                stringLength: {
                  min: 1,
                  message: 'The Subject must not be empty'
                },
                regexp: {
                  regexp: /^[a-zA-Z0-9]+.*$/,
                  message: 'The subject must contain characters'
                }
              }
            },
            "password": {
              validators: {
                notEmpty: {
                  message: 'Password is required'
                },
                stringLength: {
                  min: 6,
                  message: 'The Password must be more than 6 characters'
                },
                regexp: {
                  regexp: /^[a-zA-Z0-9]+.*$/,
                  message: 'The Password must contain characters'
                }
              }
            }
          }
        });
      });
    </script>