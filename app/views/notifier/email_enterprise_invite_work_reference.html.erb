<%= render 'notifier/email_header' %>
<center class="wrapper" style="display: table;table-layout: fixed;width: 100%;min-width: 620px;-webkit-text-size-adjust: 100%;-ms-text-size-adjust: 100%;background-color: #fbfbfb">
  <%= render 'notifier/email_logo' %>
  <table class="centered" style="border-collapse: collapse;border-spacing: 0;Margin-left: auto;Margin-right: auto">
    <tbody>
    <tr>
      <td class="border" style="padding: 0;vertical-align: top;font-size: 1px;line-height: 1px;background-color: #e9e9e9;width: 1px">​</td>
      <td style="padding: 0;vertical-align: top">
        <table class="one-col" style="border-collapse: collapse;border-spacing: 0;Margin-left: auto;Margin-right: auto;width: 600px;background-color: #ffffff;font-size: 14px">
          <tbody>
          <tr>
            <td class="column" style="padding: 0;vertical-align: top;text-align: left">
              <div>
                <div class="column-top" style="font-size: 32px;line-height: 32px">&nbsp;</div>
              </div>
              <table class="contents" style="border-collapse: collapse;border-spacing: 0;width: 100%">
                <tbody>
                <tr>
                  <td class="padded" style="padding: 0;vertical-align: top;padding-left: 32px;padding-right: 32px">
                    <p style="Margin-top: 0;color: #565656;font-family: 'Lucida Grande';font-size: 16px;line-height: 25px;Margin-bottom: 25px">Hi <%= @enterprise_user.last_name %>,
                    </p>

                    <p style="Margin-top: 0;color: #565656;font-family: 'Lucida Grande';font-size: 16px;line-height: 25px;Margin-bottom: 25px">
                      <%= @user.name %> has requested you to write a reference for the work at
                      <span style="text-decoration: underline"><%= @work.company %></span> as
                      <span style="text-decoration: underline"><%= @work.title %></span>
                      during <%= @work.start_month %>, <%= @work.start_year %> to <%= @work.end_month %>, <%= @work.end_year %>
                    </p>
                  </td>
                </tr>
                </tbody>
              </table>

              <table class="centered" style="border-collapse: collapse;border-spacing: 0;Margin-left: auto;Margin-right: auto">
                <tbody>
                <tr>
                  <td class="padded" style="padding: 0;vertical-align: top;padding-left: 32px;padding-right: 32px">
                    <p style="Margin-top: 0;color: #565656;font-family: 'Lucida Grande';font-size: 16px;line-height: 25px;Margin-bottom: 25px">
                      Message from <%= @user.name %>:
                      <br/></br>
                      <span style="font-family: 'Open Sans', 'lucida grande', arial, verdana, 'lucida sans unicode', tahoma, sans-serif; font-style: italic; padding: 10px">
                        "<%=h @invite.message %>"
                      </span>
                    </p>
                  </td>
                </tr>
                </tbody>
              </table>


              <table class="contents" style="border-collapse: collapse;margin:auto;border-spacing: 0;table-layout: fixed;width: 100%">
                <tbody>
                <tr>
                  <td class="padded" style="padding: 0;vertical-align: top;padding-left: 32px;padding-right: 32px;word-wrap: break-word">
                    <div style="margin:14px 0;display:block;text-align:center">
                      <a href="<%= @url %>" style="background:linear-gradient(to bottom,#49ad41 0%,#3d9936 100%);border-radius:4px;color:#ffffff;display:inline-block;padding:12px 40px;margin:0 auto;max-width:98.5%;text-decoration:none;text-transform:uppercase;font-family:Helvetica,Arial,sans-serif;font-size:15px;font-weight:normal;letter-spacing:2px" target="_blank">
                        Add Reference </a><span style="color:#9a9a9a"></span></div>
                  </td>
                </tr>
                </tbody>
              </table>

              <table class="contents" style="border-collapse: collapse;border-spacing: 0;width: 100%">
                <tbody>
                <tr>
                  <td class="padded" style="padding: 0;vertical-align: top;padding-left: 32px;padding-right: 32px">
                    <p style="Margin-top: 0;color: #565656;font-family: 'Lucida Grande';font-size: 16px;line-height: 25px;Margin-bottom: 25px"> - Meed Team</p>
                  </td>
                </tr>
                </tbody>
              </table>
              <div class="column-bottom" style="font-size: 8px;line-height: 8px">&nbsp;</div>
            </td>
          </tr>
          </tbody>
        </table>
      </td>
      <td class="border" style="padding: 0;vertical-align: top;font-size: 1px;line-height: 1px;background-color: #e9e9e9;width: 1px">​</td>
    </tr>
    </tbody>
  </table>
  <table class="border" style="border-collapse: collapse;border-spacing: 0;font-size: 1px;line-height: 1px;background-color: #e9e9e9;Margin-left: auto;Margin-right: auto" width="602">
    <tbody>
    <tr>
      <td style="padding: 0;vertical-align: top">​</td>
    </tr>
    </tbody>
  </table>
  <div class="spacer" style="font-size: 1px;line-height: 32px;width: 100%">&nbsp;</div>
</center>
<p>
  <br>
</p>

</body>
</html>