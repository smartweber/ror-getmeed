<%= render 'notifier/email_header' %>
<center class="wrapper" style="display: table;table-layout: fixed;width: 100%;min-width: 620px;-webkit-text-size-adjust: 100%;-ms-text-size-adjust: 100%;background-color: #fbfbfb">
  <%= render 'notifier/email_logo' %>
  <table class="centered" style="border-collapse: collapse;border-spacing: 0;Margin-left: auto;Margin-right: auto">
    <tbody>
    <tr>
      <td class="border" style="padding: 0;vertical-align: top;font-size: 1px;line-height: 1px;background-color: #e9e9e9;width: 1px">​</td>
      <td style="padding: 0;vertical-align: top">
        <table class="one-col" style="border-collapse: collapse;border-spacing: 0;Margin-left: auto;Margin-right: auto;width: 600px;background-color: #ffffff;font-size: 14px">
          <tbody>
          <tr>
            <td class="column" style="padding: 0;vertical-align: top;text-align: left">
              <div>
                <div class="column-top" style="font-size: 32px;line-height: 32px">&nbsp;</div>
              </div>
              <table class="contents" style="border-collapse: collapse;border-spacing: 0;width: 100%">
                <tbody>
                <tr>
                  <td class="padded" style="padding: 0;vertical-align: top;padding-left: 32px;padding-right: 32px">
                    <p style="Margin-top: 0;color: #565656;font-family: 'Lucida Grande';font-size: 16px;line-height: 25px;Margin-bottom: 25px">
                      <table class="one-col" style="border-collapse: collapse;border-spacing: 0;Margin-left: auto;Margin-right: auto;width: 600px;background-color: #ffffff;font-size: 14px">
                        <tbody>
                          <tr>
                            <td class="column" style="padding: 8px;vertical-align: top;text-align: center">
                              <a href="<%= @url %>">
                                <% if @user.image_url.blank? %>
                                  <img src="https://res.cloudinary.com/resume/image/upload/v1409877319/user_male4-128_q1iypj_lgzk5i.jpg" style="max-width: 50px;">
                                <% else %>
                                  <img src="<%= @user.image_url %>" style="max-width: 50px;">
                                <% end %>
                              </a>
                            </td>
                            <td style="font-size:16px;">
                              <a href="<%= @url %>" style="  font-size: 25px;color: #00a651!important;text-decoration: none!important;">
                                <%= @user.first_name %>
                              </a>
                              <span style="color: #999;font-family: 'Lucida Grande';font-size: 12px;">
                                <%= @user.major %>&nbsp;<span style="font-size: 25px"><b>&middot;</b></span>&nbsp;
                                <%= @user.degree %>&nbsp;<span style="font-size: 25px"><b>&middot;</b></span>&nbsp;
                                <%= @user.school %>
                              </span>
                            </td>
                          </tr>
                          <tr>
                            <td>
                            </td>
                            <td style="color:#565656;font-family: 'Lucida Grande';font-size: 14px;">
                              <% unless @job_app.cover_note.blank? %>
                                "<%= sanitize_html_text( @job_app.cover_note).html_safe.truncate(250, :omission => '..') %>"
                              <% end %>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </p>
                  </td>
                </tr>
                </tbody>
              </table>
              <p>
              </p>

              <p>
              </p>

              <div class="column-bottom" style="font-size: 8px;line-height: 8px">&nbsp;</div>
              <table class="contents" style="border-collapse: collapse;margin:auto;border-spacing: 0;table-layout: fixed;width: 100%">
                <tbody>
                <tr>
                  <td class="padded" style="padding: 0;vertical-align: top;padding-left: 32px;padding-right: 32px;word-wrap: break-word">
                    <div style="margin:14px 0;display:block;text-align:center">
                      <a href="<%= @short_listed ? "#{@url}&show_profile=#{@user.handle}#shortlisted" : "#{@url}&show_profile=#{@user.handle}#applications" %>"  style="background:linear-gradient(to bottom,#49ad41 0%,#3d9936 100%);border-radius:4px;color:#ffffff;display:inline-block;padding:12px 40px;margin:0 auto;max-width:98.5%;text-decoration:none;text-transform:uppercase;font-family:Helvetica,Arial,sans-serif;font-size:15px;font-weight:normal;letter-spacing:2px" target="_blank">
                        <%= @short_listed ? 'Contact Profile' : 'View Profile' %>
                      </a>
                      <span style="color:#9a9a9a"></span>
                    </div>
                  </td>
                </tr>
                </tbody>
              </table>


              <table class="border" style="border-collapse: collapse;border-spacing: 0;font-size: 16px;line-height: 1px;background-color: #e9e9e9;Margin-left: auto;Margin-right: auto" width="602">
                <tbody>
                <tr>
                  <td style="padding: 0;vertical-align: top">​
                  </td>
                </tr>
                </tbody>
              </table>
            </td>
          </tr>
          </tbody>
        </table>
      </td>
      <td class="border" style="padding: 0;vertical-align: top;font-size: 1px;line-height: 1px;background-color: #e9e9e9;width: 1px">​</td>
    </tr>
    </tbody>
  </table>
  <div class="spacer" style="font-size: 1px;line-height: 32px;width: 100%">&nbsp;</div>
</center>
<%= render 'notifier/email_footer' %>
</body>
</html>
